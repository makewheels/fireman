<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<!-- 配置类和表结构的映射 -->
	<class name="com.eg.fireman.bean.WrongQuestion" table="wrongQuestion">
		<!-- 配置id 见到name属性，JavaBean的属性 见到column属性，是表结构的字段 -->
		<id name="id" column="id">
			<!-- 主键的生成策略 -->
			<generator class="native" />
		</id>
		<!-- 配置其他的属性 -->
		<property name="userId" column="userId" />
		<property name="questionId" column="questionId" />
		<property name="pian" column="pian" />
		<property name="chapter" column="chapter" />
		<property name="questionType" column="questionType" />
		<property name="no" column="no" />
		<property name="answer" column="answer" />
		<property name="isRandom" column="isRandom" />
		<property name="wrongTimeCount" column="wrongTimeCount" />
		<property name="correctTimeCount" column="correctTimeCount" />
		<property name="isDelete" column="isDelete" />
		<property name="createTime" column="createTime" />
	</class>
</hibernate-mapping>    